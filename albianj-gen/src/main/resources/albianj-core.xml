<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="jdbcConnectionConfiguration" class="org.trangram.config.JDBCConnectionConfiguration">
        <property name="connectionURL"
                  value="${db.url}"/>
        <property name="driverClass" value="${db.driver}"/>
        <property name="userId" value="${db.user}"/>
        <property name="password" value="${db.password}"/>
    </bean>

    <bean id="connectionFactory" class="org.trangram.factory.SimpleConnectonFactory">
        <property name="jdbcConnectionConfiguration" ref="jdbcConnectionConfiguration"/>
    </bean>
    <bean id="columnFactory" class="org.trangram.factory.MysqlColumnFactory">
        <property name="typeResolver">
            <bean class="org.trangram.resolve.ProviededJavaTypeResolver"/>
        </property>
    </bean>
    <bean id="tableFactory" class="org.trangram.factory.MysqlTableFactory"/>

    <!-- 代码渲染 -->
    <bean id="fileResource" class="org.beetl.core.resource.FileResourceLoader">
        <constructor-arg index="0" value="template"/>
    </bean>

    <bean id="templateConfig" class="org.beetl.core.Configuration">

    </bean>

    <bean id="gtTemplate" class="org.beetl.core.GroupTemplate" init-method="init">
        <constructor-arg index="0" ref="fileResource"/>
        <constructor-arg index="1" ref="templateConfig"/>
    </bean>

    <bean id="typeRender" class="org.trangram.task.BeetlTypeRender">
        <property name="groupTemplate" ref="gtTemplate"/>
    </bean>

</beans>